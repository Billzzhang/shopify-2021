<div class="h-full min-w-full bg-gray-50">
    <div class="px-48 py-20">
        <div class="pb-4 flex items-end">
            <p class="text-4xl font-bold">The Boppies</p>
            <div class="pl-3">
                <div id="error" class="flex">
                </div>
            </div>
        </div>
        <div>
            <p class="text-lg px-8 py-1 font-medium text-grey-300">Search for movies here and nominate up to 5 of them for the Boppies! </p>
            <p class="text-lg px-8 pb-2 text-grey-300">Any nomination you cast will automatically be saved! </p>
        </div>
        <div class="flex">  

            <div class="flex flex-col w-1/3 pr-3">
                <!--- Search Section --->
                <div class="border rounded shadow bg-white">
                    <div class="py-6 px-8">
                        <div>
                            <p class="text-xl font-normal">Movie Title</p>
                        </div>
                        <div class="pt-2">
                            <div class="border rounded flex">
                                <div class="flex py-2 pl-2">
                                    <i class="fas fa-search fa-lg text-green-400 pt-1"></i>
                                </div>
                                <input type="text" id="searchMovieText" name="fname" class="w-full h-10 pl-2"> 
                            </div>
                            <div class="flex w-1/4 mt-3 pt-2">
                                <button type="button" id="searchMovieButton" class="w-full text-lg border border-green-400 rounded-xl text-green-400 font-bold hover:text-green-600"> Search </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!--- Nomination Section --->
                <div class="pt-6">
                    <div class="border shadow rounded bg-white">
                        <div class="py-6 px-8">
                            <p class="font-semibold text-2xl"> Nominations</p>
                            <div class="table w-full pl-8 pt-4">
                                <div class="table-row-group">
                                    <ul id="nominationList">
                                    </ul>
                                </div>
                            </div>
                        </div>                    
                    </div>
                </div>
            </div>

            <!--- Found section --->
            <div id="searchSection" class="w-2/3 pl-3 invisible">
                <div class="border shadow rounded bg-white">
                    <div class="py-6 px-8">
                        <p id="searchResult" class="font-semibold text-3xl"> Results for "Placeholder"</p>

                        <div class="table w-full pl-8 pt-4">
                            <div class="table-row-group">
                                <ul id="searchList">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%= javascript_pack_tag 'home' %>